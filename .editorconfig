# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true

[*.{json,yml}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false
